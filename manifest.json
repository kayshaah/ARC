{
  "name": "ARC v1 â€” Amazon Review Classifier",
  "description": "Amazon Review Classification Extension - Gr7JKR",
  "version": "1.0",
  "manifest_version": 3,

  "action": {
    "default_title": "ARC v1",
    "default_popup": "hello.html",
    "default_icon": "icon.png"
  },

  "permissions": ["scripting", "activeTab", "storage"],

  "host_permissions": [
    "https://www.amazon.com/*",
    "https://www.amazon.ca/*",
    "https://www.amazon.co.uk/*",
    "https://www.amazon.in/*",
    "https://www.amazon.de/*",
    "https://www.amazon.it/*",
    "https://www.amazon.es/*",
    "https://www.amazon.fr/*"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.com/*",
        "https://www.amazon.ca/*",
        "https://www.amazon.co.uk/*",
        "https://www.amazon.in/*",
        "https://www.amazon.de/*",
        "https://www.amazon.it/*",
        "https://www.amazon.es/*",
        "https://www.amazon.fr/*"
      ],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ],

  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
