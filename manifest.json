{
  "name": "ARC v2 - ML Powered",
  "description": "Amazon Review Classifier with ML Backend",
  "version": "2.0",
  "manifest_version": 3,
  "permissions": ["storage"],
  "host_permissions": [
    "https://www.amazon.com/*",
    "https://www.amazon.in/*",
    "https://www.amazon.co.uk/*",
    "http://127.0.0.1:8001/*"
  ],
  "action": {
    "default_title": "ARC",
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.com/*",
        "https://www.amazon.in/*",
        "https://www.amazon.co.uk/*"
      ],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": { "16": "icon.png", "48": "icon.png", "128": "icon.png" }
}
